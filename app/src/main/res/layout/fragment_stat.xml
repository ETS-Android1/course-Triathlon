<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragmentMenu.Fragment_result">

    <!-- TODO: Update blank fragment layout -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabstat"
            android:layout_width="409dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="1dp"
            android:layout_marginLeft="1dp"
            android:layout_marginEnd="1dp"
            android:layout_marginRight="1dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tabIndicatorColor="#064AAF"
            app:tabSelectedTextColor="#EE064AAF"
            app:tabTextColor="#6B064AAF">

            <com.google.android.material.tabs.TabItem
                android:id="@+id/tous"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tous" />

            <com.google.android.material.tabs.TabItem
                android:id="@+id/stath"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hommes" />

            <com.google.android.material.tabs.TabItem
                android:id="@+id/statf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Femmes" />


        </com.google.android.material.tabs.TabLayout>


        <androidx.viewpager.widget.ViewPager

            android:id="@+id/viewpagescorestat"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tabstat" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>